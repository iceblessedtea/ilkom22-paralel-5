                </nav>
            </div>
        </div>
    </header>

  <form action="/appointments" method="post">
    <input type="hidden" name="redirect_to" value="<%= @redirect_to %>">
  
    <label for="patient_id">Nama Pasien:</label>
   <select name="patient_id" id="patient_id" required>
      <% @patients.each do |patient| %>
      <option value="<%= patient.id %>" <%= 'selected' if patient.id.to_s == @selected_patient_id %>><%= patient.name %></option>
      <% end %>
   </select>
    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-2xl font-bold text-center mb-8 text-gray-900">Tambah Janji Temu Baru</h1>
            <form action="/appointments" method="post" class="space-y-6">
                <!-- Nama Pasien -->
                <div>
                    <label for="patient_id" class="block text-sm font-medium text-gray-700">Nama Pasien:</label>
                    <select id="patient_id" name="patient_id">
                        <option value="1">John Doe</option>
                        <option value="2">Jane Smith</option>
                    </select>
                </div>

    <label for="doctor_id">Nama Dokter:</label>
    <select name="doctor_id" id="doctor_id" required>
      <% @doctors.each do |doctor| %>
        <option value="<%= doctor.id %>"><%= doctor.name %></option>
      <% end %>
    </select>
                <!-- Nama Dokter -->
                <div>
                    <label for="doctor_id" class="block text-sm font-medium text-gray-700">Nama Dokter:</label>
                    <select id="doctor_id" name="doctor_id">
                        <option value="1">Dr. John Smith</option>
                        <option value="2">Dr. Jane Doe</option>
                    </select>
                </div>

    <label for="date">Tanggal:</label>
    <input type="date" name="date" id="date" required>
                <!-- Tanggal dan Waktu -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="date" class="block text-sm font-medium text-gray-700">Tanggal:</label>
                        <input type="date" id="date" name="date">
                    </div>
                    <div>
                        <label for="time" class="block text-sm font-medium text-gray-700">Waktu:</label>
                        <input type="time" id="time" name="time">
                    </div>
                </div>

    <label for="time">Waktu:</label>
    <input type="time" name="time" id="time" required>
                <!-- Deskripsi -->
                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700">Deskripsi:</label>
                    <textarea id="description" name="description" rows="4"></textarea>
                </div>

    <label for="description">Deskripsi:</label>
    <textarea name="description" id="description" required></textarea>
                <!-- Tombol -->
                <div class="flex justify-between">
                    <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition">Simpan Janji Temu</button>
                    <a href="/appointments-view" class="bg-gray-200 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-300 transition">Batal</a>
                </div>
            </form>
        </div>
    </main>

    <button type="submit">Simpan Janji Temu</button>
    <a href="<%= params[:redirect_to] || '/appointments-view' %>" class="cancel-btn">Batal</a>
  </form>
    <!-- Footer -->
