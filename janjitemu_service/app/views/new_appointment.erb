    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        /* Dropdown menu */
        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: #00334e; /* Warna biru gelap */
            color: white;
            min-width: 250px;
            padding: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 4px;
            transform: scale(0.8) translateY(-10px);
            transform-origin: center;
            transition: transform 0.3s ease, opacity 0.3s ease;
            opacity: 0;
        }

        .dropdown:hover .dropdown-menu {
            transform: scale(1) translateY(0);
            opacity: 1;
        }

        .dropdown-menu a {
            display: block;
            padding: 8px 16px;
            text-decoration: none;
            color: white;
        }

        .dropdown-menu a:hover {
            background-color: #00506b; /* Warna hover */
        }

        /* Multi-column dropdown */
        .dropdown-menu {
            column-count: 2;
            column-gap: 16px;
        }

        /* Form Borders */
        form select,
        form input,
        form textarea {
            border: 1px solid #d1d5db; /* Tailwind gray-300 */
            border-radius: 0.375rem; /* Tailwind rounded-md */
            padding: 0.5rem;
            width: 100%;
            transition: border-color 0.2s;
        }

        form select:focus,
        form input:focus,
        form textarea:focus {
            outline: none;
            border-color: #3b82f6; /* Tailwind blue-500 */
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2); /* Blue focus ring */
        }
    </style>
</head>
<body>
  <h1>Tambah Janji Temu Baru</h1>
<body class="bg-gray-50">

  <div class="sub-header">
    <img src="/images/Universitas-Halu-Oleo-Logo.png" alt="Logo UHO" class="hospital-image">
    <h2>Rumah Sakit UHO</h2>
  </div>
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
