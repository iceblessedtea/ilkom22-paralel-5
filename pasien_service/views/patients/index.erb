<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Patients</title>
  <link rel="stylesheet" href="/css/style_index.css">
</head>
<body>
  <h2>All Patients</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.id %></td>
          <td><%= patient.name %></td>
          <td><%= patient.email %></td>
          <td>
            <a href="/patients/<%= patient.id %>" class="btn btn-info">View</a>
            <a href="/patients/<%= patient.id %>/edit" class="btn btn-warning">Edit</a>
            <form action="/patients/<%= patient.id %>" method="POST" style="display:inline">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <a href="/patients/new" class="btn btn-primary">Add New Patient</a>
</body>
</html>
