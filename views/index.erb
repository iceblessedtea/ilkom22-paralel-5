<h2>Daftar Rekam Medis</h2>

<table>
  <tr>
    <th>ID Rekam Medis</th>
    <th>Nama Pasien</th>
    <th>Diagnosa</th>
    <th>Aksi</th>
  </tr>
  <% @records.each do |record| %>
    <tr>
      <td><%= record.id %></td>
      <td><%= record.patient_name %></td>
      <td><%= record.diagnosis %></td>
      <td>
        <button onclick="confirmDelete(<%= record.id %>)">Hapus</button>
      </td>
    </tr>
  <% end %>
</table>
